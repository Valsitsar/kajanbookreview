@using BusinessLogicLayer
@model IndexModel
@{
    // var books = ViewData["Books"] as List<Book>;
}


<div class="flex-container">
    <div class="flex-container">
    @foreach (var book in Model.Books)
    {
            <div class="flex-book-cover-container">
                <img id="book-cover-pic" src="@book.CoverFilePath" alt="@book.Title cover"/>
                <div>
                    @for (int i = 0; i < 5; i++) { <i class="bi bi-star"></i> }
                </div>
            </div>
            <div class="flex-right-container">
                <div class="title-author-lang-container">
                    <div class="short-text">
                        @book.Title
                    </div>
                    <div class="short-text">
                        Example author
                    </div>
                    <div class="short-text">
                        @book.Language
                    </div>
                </div>

                <div id="book-description">
                    @book.Description
                </div>
            </div>
        <br />
        }
    </div>
</div>