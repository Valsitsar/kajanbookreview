@page
@model Web_App.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="sign-in-wrapper d-flex flex-column justify-content-center align-items-center">
    <div class="col-lg-8 col-12">
        <div class="card border-goldenrod">
            <div class="card-header text-center">
                <h3>Register</h3>
            </div>
            <div class="card-body col-xl-6 col-lg-8 col-md-9 col-xs-12 mx-auto">
                <form method="post">

                    @* Username *@
                    <div class="input-group mb-3 border-goldenrod rounded">
                        <span class="input-group-text">
                            <i class="bi bi-person"></i>
                        </span>
                        <input asp-for="Username" type="text" class="form-control" placeholder="Username" required />
                    </div>

                    @* Email *@
                    <div class="input-group mb-3 border-goldenrod rounded">
                        <span class="input-group-text">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" required />
                    </div>

                    @* Password *@
                    <div class="input-group mb-3 border-goldenrod rounded">
                        <span class="input-group-text">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                    </div>

                    @* Confirm password *@
                    <div class="input-group border-goldenrod rounded">
                        <span class="input-group-text">
                            <i class="bi bi-lock-fill"></i>
                        </span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required
                               data-toggle="tooltip" data-placement="bottom" title="Passwords do not match." />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    @* Confirm sign in *@
                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-goldenrod mb-1">Continue</button>
                    </div>
                </form>
                <div class="text-center text-muted pb-3 border-bottom-goldenrod">
                    Already have an account? Sign in <a href="/SignIn" class="text-decoration-none">here</a>.
                </div>
                <div class="text-center pt-3">
                    <p>Or sign in with:</p>
                    <a href="#" class="btn btn-outline-goldenrod border-goldenrod mb-2"><i class="bi bi-google me-1"></i>Google</a>
                </div>
            </div>
        </div>
    </div>
</div>