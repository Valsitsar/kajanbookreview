@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 id="welcome-header" class="display-4 fw-bold mb-5">Welcome to KajanReview!</h1>
    <h1 class="display-4 my-5">Book list</h1>
    <h3 class="text-muted my-3 mt-2"> Looking for something specific? </h3>
    <form class="row g-3 align-items-center justify-content-center mb-5">
        <label for="bookSearchBar" class="visually-hidden">Search by Title, Author, Series name, or ISBN</label>
        <input type="text" placeholder="Search by Title, Author, Series name, or ISBN" id="bookSearchBar" class="form-control-lg me-3 col-4" />
        <button type="submit" class="btn btn-goldenrod fs-5 col-1">Search</button>
    </form>

    <!-- Pagination controls (Top) -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)" tabindex="-1">
                    Previous
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        </ul>
    </nav>

    @foreach (var book in Model.Books)
    {
        <partial name="Shared/_BookListPartial" for="@book" />
    }

    <!-- Pagination controls (Bottom) -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)" tabindex="-1">
                    Previous
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)">
                    Next
                </a>
            </li>
        </ul>
    </nav>
</div>
